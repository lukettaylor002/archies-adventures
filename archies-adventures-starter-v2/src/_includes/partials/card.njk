<article class="card">
  <a href="{{ post.url }}">
    {% if post.data.cover %}<img src="{{ post.data.cover }}" alt="">{% endif %}
    <h3 style="margin:.7rem 0 .3rem">{{ post.data.title }}</h3>
    {% if post.data.tags %}
      <div>
        {% for t in post.data.tags %}
          <span class="tag {{ "tag--" + t | slug }}">{{ t }}</span>
        {% endfor %}
      </div>
    {% endif %}
    {% if post.data.excerpt %}<p style="margin:.5rem 0;opacity:.85">{{ post.data.excerpt }}</p>{% endif %}
  </a>
</article>
