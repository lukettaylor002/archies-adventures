---
layout: layouts/base.njk
---

<article class="aa-post">
  <div class="container">

    <a href="/adventures/" class="aa-post__back">← Back to Adventures</a>

    {% if cover %}
      <img class="aa-post__cover" src="{{ cover }}" alt="">
    {% endif %}

    <div class="aa-post__meta">
      {% if tags and tags.length %}
        <span class="chip chip--green">{{ tags[0] }}</span>
      {% endif %}
      <span class="aa-post__meta-chip">📅 {{ page.date | date("MMM dd, yyyy") }}</span>
      <span class="aa-post__meta-chip">⏱️ {{ content | readTime }}</span>
    </div>

    <h1 class="aa-post__title">{{ title }}</h1>

    {% if excerpt %}
      <p class="aa-post__subtitle">{{ excerpt }}</p>
    {% endif %}


    <div class="aa-post__card content">
      {{ content | safe }}
    </div>

<section class="signup-banner" aria-labelledby="signup-title">
  <div class="container">
    <div class="signup-banner__inner">
      <h2 id="signup-title" class="signup-banner__title">
        Receive the latest Adventure updates.
      </h2>

      <!-- Netlify form -->
      <form name="newsletter-hero"
            method="POST"
            data-netlify="true"
            netlify-honeypot="bot-field"
            action="/thanks"
            class="signup-form"
            aria-label="Subscribe to newsletter">

        <input type="hidden" name="form-name" value="newsletter-hero">
        <p class="hidden"><label>Don’t fill this out: <input name="bot-field"></label></p>

        <div class="signup-form__row">
          <label for="signup-email" class="sr-only">Your email</label>
          <input id="signup-email"
                 type="email"
                 name="email"
                 placeholder="Enter your email address"
                 required
                 inputmode="email"
                 autocomplete="email">
          <button type="submit" class="btn-2tone">Subscribe</button>
        </div>

        <label class="signup-form__agree">
          <input type="checkbox" name="agree" required>
          I agree to receive adventure updates ✨
        </label>
      </form>
    </div>
  </div>
</section>

    <div class="aa-post__footer">
      <img src="/images/logo-badge.svg" alt="" class="aa-post__mini" width="28" height="28">
      <p>Thanks for joining my adventure! ✨</p>
      <a class="btn-2tone" href="/adventures/">Discover More Adventures</a>
    </div>

  </div>
</article>
