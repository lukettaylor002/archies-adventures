{% extends "layouts/base.njk" %}
{% block content %}

<section class="aa-hero">
  <div class="aa-hero__bg"></div>

  <div class="aa-hero__inner container">
    <!-- Badge -->
    <div class="aa-hero__badge">
      <img src="/images/logo-badge.svg" alt="Archie’s Adventures" width="64" height="64">
    </div>

    <!-- Title -->
    <h1 class="aa-hero__title">
      Welcome to <span class="aa-accent">Archie’s</span> Adventures! 🌍
    </h1>

    <!-- Lead -->
    <p class="aa-hero__lead">
      🌎 Join me as I explore amazing places, discover cool things, and share incredible
      stories! Every adventure is a chance to learn something new. Ready to explore with
      me?<span class="aa-pop">Let’s go!</span>🚀
    </p>

    <!-- Actions -->
    <div class="aa-hero__actions">
      <a class="btn-2tone aa-btn-lg" href="/admin/#/collections/posts/new">
        <span class="aa-ico">＋</span> Start New Adventure
      </a>

      <a class="aa-btn-outline aa-btn-lg" href="/adventures/">
        <span class="aa-ico">🧭</span> Explore Adventures
      </a>
    </div>
  </div>

  <!-- (Optional) small corner doodles; replace src with your art or remove these -->
  <img class="aa-hero__orn aa-hero__orn--left"  src="/images/orn-tent.png"  alt="" aria-hidden="true">
  <img class="aa-hero__orn aa-hero__orn--right" src="/images/orn-star.png"  alt="" aria-hidden="true">
</section>

<section class="container">
  <h2>Latest Adventures</h2>
  <div class="grid">
    {% for p in collections.posts | reverse | slice(0,6) %}
      <article class="card">
        <a href="{{ p.url }}">
          {% if p.data.cover %}<img src="{{ p.data.cover }}" alt="">{% endif %}
          <h3>{{ p.data.title }}</h3>
          {% if p.data.tags %}
            <div class="tags">
              {% for t in p.data.tags %}
                <span class="tag {{ "tag--" + t | slug }}">{{ t }}</span>
              {% endfor %}
            </div>
          {% endif %}
          {% if p.data.excerpt %}<p style="margin:.35rem 0 .1rem; opacity:.9">{{ p.data.excerpt }}</p>{% endif %}
        </a>
      </article>
    {% endfor %}
  </div>
</section>

{% endblock %}
