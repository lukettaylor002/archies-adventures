{% extends "layouts/base.njk" %}
{% block content %}

<section class="aa-hero">
  <div class="aa-hero__bg"></div>

  <div class="aa-hero__card container">
    <div class="aa-hero__badge">
      <img src="/images/logo-badge.svg" alt="Archie’s Adventures" width="64" height="64">
    </div>

    <h1 class="aa-hero__title">
      Welcome to <span class="aa-accent">Archie’s</span> Adventures! 🌍
    </h1>

    <p class="aa-hero__lead">
      🌎 Join me as I explore amazing places, discover cool things, and share incredible
      stories! Every adventure is a chance to learn something new. Ready to explore with me?
      <strong class="aa-pop">Let’s go!</strong> 🚀
    </p>

    <div class="aa-hero__actions">
      <a class="btn-2tone aa-btn" href="/admin/#/collections/posts/new">＋ Start New Adventure</a>
      <a class="aa-btn-outline aa-btn" href="/adventures/">🧭 Explore Adventures</a>
    </div>
  </div>
</section>

  <section>
  <h2>Latest Adventures</h2>
  <div class="grid">
    {% for post in collections.posts | reverse | slice(0,6) %}
      {% set p = post %}
      {% include "partials/card.njk" %}
    {% endfor %}
  </div>
</section>




{% endblock %}
