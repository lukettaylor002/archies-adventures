{% extends "layouts/base.njk" %}
{% block content %}
<section class="hero">
  <h1>Welcome!</h1>
  <p>{{ site.tagline }}</p>
  <a class="btn" href="/adventures/">Browse adventures</a>
</section>
<section>
  <h2>Latest Adventures</h2>
  <div class="grid">
    {% for post in collections.posts | reverse | slice(0,6) %}
      {% include "partials/card.njk" %}
    {% endfor %}
  </div>
</section>
{% endblock %}
