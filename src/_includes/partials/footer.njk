<footer class="aa-footer3" role="contentinfo" aria-label="Site footer">
  <!-- soft adventure pattern -->
  <div class="aa-footer3__bg" aria-hidden="true"></div>

  <div class="container aa-footer3__grid">
    <!-- Col 1: Logo (big) + About -->
    <section class="aa-foot__brand">
      <img src="/images/logo-badge.svg" alt="" width="120" height="120" class="aa-foot__logo">
      <h3 class="aa-foot__h">About the blog</h3>
      <p class="aa-foot__p">
        Archie shares kid-friendly adventures, days out, and curious discoveries.
        Every story is a chance to learn something new—come explore with us! 🌍
      </p>
    </section>

    <!-- Col 2: Navigation -->
    <nav class="aa-foot__nav" aria-label="Footer navigation">
      <h3 class="aa-foot__h">Explore</h3>
      <ul class="aa-foot__list">
        <li><a href="/">Home</a></li>
        <li><a href="/adventures/">All Adventures</a></li>
        <li><a href="/about/">About</a></li>
        <li><a href="/posts/">Archive</a></li>
      </ul>
    </nav>

    <!-- Col 3: Subscribe -->
    <section class="aa-foot__sub">
      <h3 class="aa-foot__h">Subscribe</h3>
      <p class="aa-foot__p">Get new adventures by email. No spam. Unsubscribe anytime.</p>

      <!-- Netlify Forms -->
      <form name="newsletter" method="POST" data-netlify="true"
            netlify-honeypot="bot-field" action="/thanks" class="aa-sub__form">
        <input type="hidden" name="form-name" value="newsletter">
        <p class="sr-only"><label>Don’t fill this out: <input name="bot-field"></label></p>

        <div class="aa-sub__row">
          <input aria-label="Your email" type="email" name="email" placeholder="Your email" required>
          <button class="aa-sub__btn" type="submit">Subscribe</button>
        </div>

        <!-- Optional consent line under the input row -->
        <label class="aa-sub__agree">
          <input type="checkbox" name="agree" required>
          I agree to receive adventure updates ✨
        </label>
      </form>
    </section>
  </div>

  <div class="aa-footer3__legal">
    <div class="container">
      <p>© {{ site.year }} Archie’s Adventures • Made with 🍕 & curiosity</p>
    </div>
  </div>
</footer>
