<header class="header">
  <div class="header__inner">
    <!-- Brand -->
    <a class="header__left" href="/">
      <img src="/images/logo-badge.svg" alt="Archie’s Adventures" width="40" height="40">
      <div>
        <div class="header__brand">Archie’s Adventures</div>
        <div class="header__tagline">Exploring the world, one story at a time</div>
      </div>
    </a>

    <!-- Burger / toggle -->
    <button class="nav-toggle" aria-label="Open menu" aria-expanded="false" aria-controls="site-nav">
      <span class="nav-toggle__bar"></span>
      <span class="nav-toggle__bar"></span>
      <span class="nav-toggle__bar"></span>
    </button>

    <!-- Nav -->
    <nav id="site-nav" class="header__right" data-collapsible>
      <a href="/">Home</a>
      <a href="/adventures/">Adventures</a>
      <a href="/about/">About</a>
    </nav>
  </div>
</header>

<script>
  (function () {
    const btn = document.querySelector('.nav-toggle');
    const nav = document.getElementById('site-nav');

    function toggle(open) {
      btn.setAttribute('aria-expanded', open);
      nav.classList.toggle('open', open);
      btn.classList.toggle('open', open);
      document.documentElement.classList.toggle('nav-open', open);
    }

    btn.addEventListener('click', () => {
      const isOpen = btn.getAttribute('aria-expanded') === 'true';
      toggle(!isOpen);
    });

    // Close on ESC and when a link is clicked
    document.addEventListener('keydown', e => { if (e.key === 'Escape') toggle(false); });
    nav.addEventListener('click', e => {
      if (e.target.closest('a')) toggle(false);
    });
  })();
</script>
